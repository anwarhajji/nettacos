---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<header id="sticky-header" class="bg-gradient-to-br from-black via-pink-800 to-black bg-opacity-20 dark:bg-gradient-to-br dark:from-pink-700 dark:via-gray-800 dark:to-black  dark:bg-opacity-10" >
  <SkipLinks />
  <Navigation >
    <li class="menu-item" >
      <a href="/" >Home</a>
    </li>
    <li class="menu-item">
      <a href="/menu">MENU</a>
    </li>
    <li class="menu-item">
      <a href="../#section1">ABOUT</a>
    </li>
    
    <li class="menu-item">
      <a href="/map/">FIND US</a>
    </li>
    
    <li class="menu-item">
      <a href="https://deliveroo.co.uk/brands/french-tacos/?utm_medium=backlink&utm_source=%20french-tacos&utm_campaign=webreferral" title="external link" rel="external noopener noreferrer">ORDER ONLINE</a>
    </li>
    
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
  #sticky-header {
  position: sticky;
  top: 0;
  z-index: 100;
 

}

</style>
